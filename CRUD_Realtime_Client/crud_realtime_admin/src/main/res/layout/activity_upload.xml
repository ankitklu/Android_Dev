<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6DAF6B">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle\nInformation!"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginTop="60dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Panel"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginTop="6dp" />

        <!-- Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:background="#FFF8E8"
            android:elevation="6dp"
            android:padding="20dp"
            android:gravity="center">

            <EditText
                android:id="@+id/uploadOwnerName"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/lavender_border"
                android:hint="Owner Name"
                android:textColor="#6DAF6B"
                android:padding="16dp"
                android:layout_marginTop="10dp" />

            <EditText
                android:id="@+id/uploadVehicleBrand"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/lavender_border"
                android:hint="Vehicle Brand"
                android:textColor="#6DAF6B"
                android:padding="16dp"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/uploadVehicleRTO"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/lavender_border"
                android:hint="Vehicle RTO"
                android:textColor="#6DAF6B"
                android:padding="16dp"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/uploadVehicleNumber"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/lavender_border"
                android:hint="Vehicle Number"
                android:textColor="#6DAF6B"
                android:padding="16dp"
                android:layout_marginTop="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Save"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_marginTop="22dp"
                android:backgroundTint="#6DAF6B"
                app:cornerRadius="25dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
