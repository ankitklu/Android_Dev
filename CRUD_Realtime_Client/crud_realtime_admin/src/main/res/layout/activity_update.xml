<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Title -->
    <TextView
        android:id="@+id/updateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Vehicle Information"
        android:textStyle="bold"
        android:textColor="@color/lavender"
        android:textSize="24sp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- Vehicle Number (reference key) -->
    <EditText
        android:id="@+id/updateVehicleNumber"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:padding="16dp"
        android:hint="Enter vehicle number"
        android:textColor="@color/lavender"
        android:textColorHint="@color/lavender"
        android:background="@drawable/lavender_border"
        app:layout_constraintTop_toBottomOf="@id/updateTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- Owner Name -->
    <EditText
        android:id="@+id/updateOwnerName"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:padding="16dp"
        android:hint="Enter owner name"
        android:textColor="@color/lavender"
        android:textColorHint="@color/lavender"
        android:background="@drawable/lavender_border"
        app:layout_constraintTop_toBottomOf="@id/updateVehicleNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



    <!-- Vehicle Brand -->
    <EditText
        android:id="@+id/updateVehicleBrand"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:padding="16dp"
        android:hint="Enter vehicle brand"
        android:textColor="@color/lavender"
        android:textColorHint="@color/lavender"
        android:background="@drawable/lavender_border"
        app:layout_constraintTop_toBottomOf="@id/updateOwnerName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- Vehicle RTO -->
    <EditText
        android:id="@+id/updateVehicleRTO"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:padding="16dp"
        android:hint="Enter RTO"
        android:textColor="@color/lavender"
        android:textColorHint="@color/lavender"
        android:background="@drawable/lavender_border"
        app:layout_constraintTop_toBottomOf="@id/updateVehicleBrand"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- Update Button -->
    <Button
        android:id="@+id/updateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:backgroundTint="@color/lavender"
        android:layout_marginTop="30dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:cornerRadius="24dp"
        app:layout_constraintTop_toBottomOf="@id/updateVehicleRTO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
